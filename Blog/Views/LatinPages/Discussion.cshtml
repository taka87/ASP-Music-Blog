@using Blog.Classes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Blog.Models.LatinPage>

<link href="~/Content/latin-styles.css" rel="stylesheet" />

<h2 style="text-align:center" class="title">Latin Music Discussion Corner</h2>

<body style="background-color: indianred">

    <a href="@Url.Action("Index", "LatinPages")" style="font-family: Arial, Helvetica, sans-serif; color: black">
        << Back to main page
    </a>
    <br />

    <div class="table-style">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)

                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Utils.CutText(item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>    
</body>
