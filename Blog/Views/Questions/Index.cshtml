@model IEnumerable<Blog.Models.Question>
@using System.Activities.Statements
@using System.Data.SqlClient
@using Blog.Classes;
@{
    ViewBag.Title = "Questions";
}
<style>
    body {
        background-image: url('../../Content/img/index-background.jpg');
        background-size: 100%;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

        body table {
            color: cyan;
            font-size: 20px;
        }

    h2 {
        color: cyan;
    }

    footer {
        color: cyan;
        text-align: center;
    }

    .miniMenu li {
        display: inline-block;
        text-decoration: none;
        background-color: rgb(242, 242, 242);
        border: solid grey;
        font-size: 14px;
        padding: 5px;
        border-radius: 5px;
        margin: 2px;
    }

        .miniMenu li a {
            text-decoration: none;
            color: black;
        }

    ul li a {
        font-family: Copperplate,Copperplate Gothic Light, sans-serif;
    }

    .table {
        background-color: rgba(0,0,0,0.5);
    }
</style>
<h2>Questions</h2>

<ul class="miniMenu">
    <li>@Html.ActionLink("Create New", "Create")</li>
    <li>@Html.ActionLink("Rock Music", "Rock")</li>
    <li>@Html.ActionLink("Heavy Metal Music", "Metal")</li>

</ul>
<table class="table">
    <tr>
        <th style="color: cyan">
            Title
        </th>
        <th style="color:cyan">
            Body
        </th>
        <th>
            Date
        </th>
        <th>
            @Html.ActionLink("Author", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Category", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="color: cyan">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="color: cyan">
                @Utils.CutText(item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.Author != null)
                {
                    @item.Author.FullName
                }
                else
                {
                    <i>(No Author)</i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                
                @if (User.IsInRole("Administrators"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:|
                }

                @Html.ActionLink("Details", "Details", new {id = item.Id}) |

                @if (User.IsInRole("Administrators"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) @:|
                }
            </td>
        </tr>
    }

</table>
