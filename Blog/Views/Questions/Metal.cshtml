@using Microsoft.Ajax.Utilities
@model List<Blog.Models.Question>
<link href="~/Content/Metal.css" rel="stylesheet" />
<div class="wrapper">
    <ul class="miniMenu">
        <li>
            @Html.ActionLink("Rock Music", "Rock")
        </li>

        <li>
