    <div class="music">
        <audio controls="controls" autoplay="true" loop="true">
            <source src="~/Content/background-music/03.%20Metallica%20-%20For%20Whom%20the%20Bell%20Tolls.mp3" type="audio/mpeg" />
        </audio>
        <p>Metallica-For Whom The Bell Tolls</p>
    </div>

    <div>
        <h1>Qiestions</h1>

        @{
            ApplicationDbContext db = new ApplicationDbContext();

        }

        <table class="table">
            <tr>
                <th style="color: yellow">
                    Title
                </th>
                <th style="color: yellow">
                    Question
                </th>
                <th style="color: yellow">
                    Date
                </th>
                <th style="color: yellow">
                    Author
                </th>
                <th style="color: yellow">
                    Category
                </th>
                <th style="color: yellow">
                    Details
                </th>

            </tr>

            @foreach (var item in db.Questions.Where(s => s.Category.ToLower() == "metal").Include(p => p.Author))
            {
                <tr>
                    <td style="color: yellow">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td style="color: yellow">
                        @Utils.CutText(item.Body)
                    </td>
                    <td style="color: yellow">
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td style="color: yellow">
                        @if (item.Author != null)
                        {
                            @item.Author.FullName
                        }
                        else
                        {
                            <i>(No Author)</i>
                        }
                    </td>
                    <td style="color: yellow">
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>

</div>
